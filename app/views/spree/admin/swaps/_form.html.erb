<div data-hook="admin_swap_form_fields" class="row">
  <div class="alpha four columns">
    <%= f.field_container :orginal do %>
        <%= f.label :original, Spree.t(:original) %> <span class="required">*</span><br />
        <%= f.error_message_on :original %>
        <%= f.text_field :original, :value => datepicker_field_value(@swap.original), :class => 'datepicker' %>
    <% end %>
  </div>
  <div class="four columns">
    <%= f.field_container :swap do %>
        <%= f.label :swap, Spree.t(:swap) %> <span class="required">*</span><br />
        <%= f.select(:swap, @swap_options, {}, { :class => 'select2' }) %>
        <%= f.error_message_on :swap %>
    <% end %>
  </div>
  <div class="omega four columns">
    <%= f.field_container :notice do %>
        <%= f.label :notice, Spree.t(:notice) %> <span class="required">*</span><br />
        <%= f.text_field :notice, :class => 'fullwidth' %>
        <%= f.error_message_on :notice %>
    <% end %>
  </div>
</div>
